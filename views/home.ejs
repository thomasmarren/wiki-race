<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Welcome to Wiki Race</h1>
    <h1 id="current-player"></h1>

    <form onsubmit="storeRandomRace()">
      <p id="random-start"></p>
      <p id="random-finish"></p>
      <input type="submit" value="Race">
    </form>
    <button onclick="newRandomRace()">New Race</button>

    <br>
    <br>

    <form onsubmit="storeNewRace()">
      <label for="">From</label>
      <input id="user-start" type="text">
      <label for="">To</label>
      <input id="user-finish" type="text">
      <input type="submit" name="" value="Race">
    </form>

    <br>

    <table id="races-table">
      <tr>
        <th>Player</th>
        <th>Starting Link</th>
        <th>Finishing Link</th>
        <th>Clicks</th>
        <th>Speed</th>
      </tr>
      <tbody id="races-table-content">
      </tbody>
    </table>

  </body>
  <script type="text/javascript">
    document.getElementById('current-player').innerHTML = sessionStorage.getItem('wiki-race-player')
  </script>
  <script src="javascripts/home/getAllRaces.js"></script>
  <script src="javascripts/home/randomRace.js"></script>
  <script src="javascripts/home/storeNewRace.js"></script>
</html>
